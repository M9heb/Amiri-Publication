<style>
  .order {
    margin-bottom: 10px;
  }

  .delete-btn {
    margin-left: 10px;
  }
</style>
<div id="order-list">
  <div class="order">
    <input type="text" class="goods-input" placeholder="Goods" />
    <input type="text" class="kind-input" placeholder="Kind" />
    <input type="number" class="cost-input" placeholder="Cost" />
    <button class="delete-btn" onclick="deleteOrder(this)">Delete</button>
  </div>
</div>
<button id="add-btn" onclick="addOrder()">Add Order</button>
<script>
  function addOrder() {
    const orderList = document.getElementById("order-list");

    // Create a new order div
    const newOrder = document.createElement("div");
    newOrder.classList.add("order");

    // Add input fields and delete button to the new order div
    newOrder.innerHTML = `
    <input type="text" class="goods-input" placeholder="Goods">
    <input type="text" class="kind-input" placeholder="Kind">
    <input type="number" class="cost-input" placeholder="Cost">
    <button class="delete-btn" onclick="deleteOrder(this)">Delete</button>
  `;

    // Append the new order div to the order list
    orderList.appendChild(newOrder);
  }

  function deleteOrder(btn) {
    // Get the parent div (order) of the delete button
    const order = btn.parentNode;

    // Remove the order from the order list
    order.parentNode.removeChild(order);
  }
</script>
